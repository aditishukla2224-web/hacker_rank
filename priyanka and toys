#include <stdio.h>
#include <stdlib.h>

int compare(const void *a, const void *b) {
    int x = *(int*)a;
    int y = *(int*)b;
    return (x > y) - (x < y);
}

int main() {
    int n;
    scanf("%d", &n);
    int *w = malloc(n * sizeof(int));
    for (int i = 0; i < n; i++) {
        scanf("%d", &w[i]);
    }

    qsort(w, n, sizeof(int), compare);

    int containers = 0;
    int i = 0;

    while (i < n) {
        int limit = w[i] + 4;
        containers++;
        while (i < n && w[i] <= limit) {
            i++;
        }
    }

    printf("%d\n", containers);
    free(w);
    return 0;
}
