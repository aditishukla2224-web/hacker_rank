#include <stdio.h>
#include <stdlib.h>

typedef struct {
    int customer;
    int serve_time;
} Order;

int cmp(const void *a, const void *b) {
    Order *o1 = (Order *)a;
    Order *o2 = (Order *)b;
    if (o1->serve_time == o2->serve_time)
        return o1->customer - o2->customer;
    return o1->serve_time - o2->serve_time;
}

int main() {
    int n;
    scanf("%d", &n);
    Order *orders = malloc(n * sizeof(Order));

    for (int i = 0; i < n; i++) {
        int order_num, prep_time;
        scanf("%d %d", &order_num, &prep_time);
        orders[i].customer = i + 1;
        orders[i].serve_time = order_num + prep_time;
    }

    qsort(orders, n, sizeof(Order), cmp);

    for (int i = 0; i < n; i++) {
        printf("%d", orders[i].customer);
        if (i != n - 1) printf(" ");
    }
    printf("\n");

    free(orders);
    return 0;
}
